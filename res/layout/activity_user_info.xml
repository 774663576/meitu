<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >

    <include
        android:id="@+id/title"
        android:layout_width="fill_parent"
        layout="@layout/title_bar" />

    <com.meitu.view.DampView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="match_parent"
                android:layout_height="230dip"
                android:scaleType="centerCrop"
                android:src="@drawable/picture_default_head" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <RelativeLayout
                android:id="@+id/layout_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="13dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="13dip" >

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textColor="@color/txt_color" />

                <TextView
                    android:id="@+id/txt_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/txt_name"
                    android:drawablePadding="8dip"
                    android:gravity="right"
                    android:paddingLeft="10dip"
                    android:textColor="@color/txt_desc_color" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="13dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="13dip" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textColor="@color/txt_color" />

                <TextView
                    android:id="@+id/txt_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/txt_desc_color" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="13dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="13dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生日"
                    android:textColor="@color/txt_color" />

                <TextView
                    android:id="@+id/txt_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/txt_desc_color" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <TextView
                android:id="@+id/txt_dongtai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
         android:background="@drawable/left_menu"
                android:drawableRight="@drawable/icon_friend_right_arrow"
                android:paddingBottom="13dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="13dip"
                android:text="他的动态"
                android:textColor="@color/txt_color" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />
        </LinearLayout>
    </com.meitu.view.DampView>

</RelativeLayout>